*observe
	// ŠÏ‘ª observe
	sdim word
	sdim exclusion_word :c_exclusion_word = 0
	repeat strlen(sentence)// •¶š‚Å‚à”š‚Å‚à‚È‚¢‚à‚Ì‚ğ“Eo
		str_ = strmid(sentence, cnt, 1)
		if IsCharAlphaNumeric(str_) == 0 {
			i = 1
