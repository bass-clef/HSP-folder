	if length(word) > 1 {
		dim dst		// ·•ªŒvZ
		repeat length(word)-1
			dst.cnt = peek(word(cnt+1), 0) - peek(word(cnt), 0)
		loop
	
		// ƒAƒ‹ƒSƒŠƒYƒ€‚Æ”äŠr
		type = 1
