	#module __LOVE__
	// ‹L‰¯EŠwK‚µ‚Ä‚¢‚é‚©ŒŸõ
	#defcfunc Learned var l_str, str word
		code = 0 :void ""
		sdim learn
		bsplit l_str, 0x1F, learn
		
		if length(learn) > 1 {
			repeat length(learn)/2
				i = cnt*2
				if learn(i) == word {
					poke code, 0, learn(i+1)
					void str(learn(i))
					break
				}
			loop
		}
	return code
