	colorwhite :boxf
	
*main
	screen 0, wcx+100, wcy, 0, (dcw-wcx)/3, (dch-wcy)/3
	title "chess mini"
	
	// initialize piece
	pokes piece, 0, "35421453"
	pokes piece, tix, "66666666"
	pokes piece, tix*6, "CCCCCCCC"
	pokes piece, tix*7, "9BA87AB9"
	CalcPoint piece, enept, mypt
	
	oncmd gosub *WindowProc, WM_RBUTTONDOWN
	oncmd gosub *WindowProc, WM_LBUTTONDOWN
	oncmd gosub *WindowProc, WM_TIMER
	
	Draw
	
	stop
*WindowProc
	switch iparam
	case WM_TIMER
		EnemyCalc
		swbreak
	case WM_RBUTTONDOWN
		sel = -1
		if bkt2a(0, mousex, wcx-1) && bkt2a(0, mousey, wcy) {
		}else {
			// over client field
			CalcField piece, 1
			title "enemy field view"
		}
		Draw
		swbreak
	case WM_LBUTTONDOWN
		if tern :swbreak
		if promotion == -1 {
			promotion = mousex/pw/2
			swbreak
		}elif bkt2a(0, mousex, wcx-1) && bkt2a(0, mousey, wcy) {
			n = mousey/ph*tix + mousex/pw
			repeat tix*tiy// reset
				if n == cnt :continue
				j = peek(piece, cnt)
				if j & 0x20 :j -= 0x20
				if j & 0x40 :j -= 0x40
				if j & 0x80 :j -= 0x80
				poke piece, cnt, j
			loop
			
			// selected position
			j = peek(piece, n) :f = 0
			if j & 0x20 :j -= 0x20 :f += 0x20
			if j & 0x40 :j -= 0x40 :f += 0x40
			if j & 0x80 :j -= 0x80 :f += 0x80
			if bkt2a(1, j, 0xC) && not(f & 0xA0) {// can selected
				repeat 1
				if (sel == n) || (j < 7) {
					sel = -1 :title "chess mini"
					break
				}
				sel = n	// select
				i = -1	// white way
				j-- :j = j\6 :j++
	
				// is types
				CalcWithTypes piece, j, tern
				loop
			}else {
				if sel != -1 {// selected
					f = peek(piece, n)
					if f & 0x80 {
						j = peek(piece, sel)
						poke piece, sel, 0
						poke piece, n, j
						if j & 0x20 :j -= 0x20
						if j & 0x40 :j -= 0x40
						if j & 0x80 :j -= 0x80
						j--
						if (j\6+1 == PAWN) && (n/tix == 0) {// promotion
							title "promotion"
							gmode 3, wcx, wcy, 128
							pos 0, 0 :gcopy IMG_BLACK, 0, 0, wcx, wcy
							gmode 4, pw, ph, 255
							color 127, 127, 127
							repeat 4
								pos pw*cnt*2+pw/2, (wcy-ph)/2
								gcopy 1, pw*(cnt+1), ph, pw, ph
							loop
							
							promotion = -1
							repeat
								if promotion != -1 :break
								wait 1
							loop
							poke piece, n, promotion+8
						}
					}
					tern = 1
				}elif f & 0x20 {
					// field selecting
					dim ary :arymax = 0
					moveAny piece, fsp, fsmax
				}else {
					j = peek(piece, n)
					if j & 0x20 :j -= 0x20
					if j & 0x40 :j -= 0x40
					if j & 0x80 :j -= 0x80
					poke piece, n, j
				}
				title "chess mini"
				sel = -1	// con't selected
			}
			
			enept = 0 :mypt = 0
			CalcPoint piece, enept, mypt
			
			if tern {
				Draw
				EnemyCalc
				tern = 0
			}
		}else {
			sel = -1		// over client field
			CalcField piece
			title "field select"
		}
		
		Draw
		swbreak
	swend
	return
	
