					}elif j & 0x80 {
						// ‘I‘ð‚µ‚Ä‚¢‚é‹î‚Ì“®‚¯‚éêŠ
						pos cnt*pw, i*ph :gcopy 2, pw, 0, pw, ph
					}else {
						if j & 0x40 {
							// “G‚Ì“®‚¯‚é”ÍˆÍ
							pos cnt*pw, i*ph :gcopy 2, pw*4, 0, pw, ph
						}
						if j & 0x20 {
							// Ž©•ª‚Ì“®‚¯‚é”ÍˆÍ
							pos cnt*pw, i*ph :gcopy 2, pw*3, 0, pw, ph
						}
					}
				}
			loop
		next
		
		// chess piece
		font msgothic, 10
		gmode 4, pw, ph, 255
		color 127, 127, 127
		for i, 0, tiy, 1
			repeat tix
				j = peek(piece, i*tix+cnt) :f = 0
				if j & 0x20 :j -= 0x20 :f += 0x20
				if j & 0x40 :j -= 0x40 :f += 0x40
