					xx = j\6*pw
					yy = j/6*ph
					
					pos cnt*pw, i*ph
					gcopy 1, xx, yy, pw, ph
				}
				
				pos cnt*pw, i*ph :bmes strf("%X+%d", f, j)	// do
				pos cnt*pw, (i+1)*ph-10 :bmes strf("%02d", i*tix+cnt)// do
			loop
		next
	
		// menu
