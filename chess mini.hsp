	#module __CHESS__KING__
	#defcfunc getKINGpos var piece, int isenemy, local j, local i
		i = -1
		repeat tix*tiy
			j == peek(piece, cnt)
			if j & 0x20 :j -= 0x20
			if j & 0x40 :j -= 0x40
			if j & 0x80 :j -= 0x80
