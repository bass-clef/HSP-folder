*init
	sdim piece, tix*tiy
	//25-67*cnt 25-188*2
	dir = "D:\\Program Files\\HSP 3.31\\"
	chdir dir
	wcx = tix*pw :wcy = tiy*ph
	dcw = ginfo(20) :dch = ginfo(21)
	sel = -1
	tern = 0
	enept = 0 :mypt = 0
	
	buffer 1
