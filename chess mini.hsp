		repeat tix*tiy
			j = peek(piece, cnt)
			if j & 0x20 :j -= 0x20
			if j & 0x40 :j -= 0x40
			if j & 0x80 :j -= 0x80
			poke piece, cnt, j
		loop
		
		repeat tix*tiy
			j = peek(piece, cnt)
			if j & 0x20 :j -= 0x20
			if j & 0x40 :j -= 0x40
			if j & 0x80 :j -= 0x80
			if bkt2a(7-6*isenemy, j, 0xC-6*isenemy) {
//				if isenemy :i@ = 1 :else :i@ = -1
				n@ = cnt
				j-- :j \= 6 :j++
				CalcWithTypes piece, j, 0x20+isenemy*0x20, isenemy
